<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundblack"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="4dp"
            android:text="회원가입"
            android:textColor="@color/white"
            android:layout_marginBottom="30dp"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="15dp"
            android:hint="Email"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:background="@drawable/signbox"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="15dp"
            android:hint="Phone Number"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:background="@drawable/signbox"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="15dp"
            android:hint="Password"

            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:background="@drawable/signbox"
            android:drawableLeft="@drawable/ic_password"
            android:inputType="textPassword"
            android:drawablePadding="8dp" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="15dp"
            android:hint="Password Confirm"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_gravity="center"
            android:background="@drawable/signbox"
            android:drawableLeft="@drawable/ic_password"
            android:inputType="textPassword"
            android:drawablePadding="8dp" />


        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="회원가입"
            android:textSize="20dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/signupbox"
            android:textAllCaps="false"
            android:fontFamily="@font/notosanskr_bold"
            app:cornerRadius="20dp" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:src="@drawable/signline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/google"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_google"
                android:paddingStart="15dp"
                android:background="@drawable/socialbox" />

            <Button
                android:id="@+id/naver"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_naver"
                android:paddingStart="15dp"
                android:background="@drawable/socialbox" />

            <Button
                android:id="@+id/kakao"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:drawableStart="@drawable/ic_kakao"
                android:paddingStart="10dp"
                android:background="@drawable/socialbox" />
        </LinearLayout>

        <Button
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인으로 돌아가기"
            android:layout_gravity="center"
            android:background="@color/backgroundblack"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium" />
    </LinearLayout>

</ScrollView>