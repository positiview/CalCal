<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".subFrag.MapFragment">

    <FrameLayout
        android:id="@+id/map_frame"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        android:layout_margin="20dp"
        android:elevation="5dp"
        android:background="@drawable/schedule_bg">



        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/ic_arrow" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAP"
            android:textAppearance="@style/white_bold_text"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_course"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ic_minus_shape"
            android:checked="true"/>


    </FrameLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.naver.maps.map.widget.LocationButtonView
        android:id="@+id/mylocation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/course_recode"
        app:layout_constraintStart_toStartOf="@id/map"
        />

    <LinearLayout
        android:id="@+id/course_recode"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"

        android:background="@drawable/rectangle_map"
        android:padding="15dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleLayout"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/select_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@drawable/rectangle_course"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/text_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="@string/course"
                android:textAppearance="@style/main_text" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/pencil" />

        </LinearLayout>


        <LinearLayout

            android:id="@+id/record2"
            android:padding="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="예상 칼로리"
                    android:textAppearance="@style/main_text"/>

                <TextView
                    android:id="@+id/calorie_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="TextView"
                    android:textAppearance="@style/red_text" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@style/main_text"
                    android:text="예상 시간" />

                <TextView
                    android:id="@+id/expected_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/red_text"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/textView3"
                    android:textAppearance="@style/main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="예상 걸음수" />

                <TextView
                    android:id="@+id/walk_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/red_text"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView4"
                    android:textAppearance="@style/main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="연속 운동" />

                <TextView
                    android:id="@+id/etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/red_text"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/startbutton"
                android:background="@drawable/redgradient"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="시작"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/white"
                android:elevation="5dp"
                />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/stopwatch_chronometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            tools:context=".MainActivity">

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="50sp"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="소모 칼로리"
                    android:textAppearance="@style/main_text"/>

                <TextView
                    android:id="@+id/calorie_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="TextView"
                    android:textAppearance="@style/red_text" />

                <TextView
                    android:id="@+id/tiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAppearance="@style/main_text"
                    android:text="현재 걸음수" />

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/red_text"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/stopwatch_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                tools:context=".MainActivity">


            <Button
                android:id="@+id/stoptbutton"
                android:background="@drawable/redgradient"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="정지"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/white"
                android:elevation="5dp"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/resetbutton"
                android:background="@drawable/redgradient"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="초기화"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/white"
                android:elevation="5dp"
                />

        </LinearLayout>

        </LinearLayout>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>