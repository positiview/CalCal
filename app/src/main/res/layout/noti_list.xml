<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="6dp"
            android:id="@+id/mypage_list_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_noti_basic"
            android:contentDescription="TODO" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:id="@+id/noti_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingStart="20dp"
        android:text="noti_title"
        android:textColor="@color/semigray"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/noti_detail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingStart="20dp"
        android:text="noti_detail"
        android:textSize="16sp"
        android:textColor="@color/white"

        tools:ignore="RtlSymmetry" />
</LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/mypage_list_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
</LinearLayout>